<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project wog-bible-converter">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/Users/yesudas/eclipse-workspace"/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/bible-converter.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="in.wordofgod.bible.converter.BibleConverter"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.jarfile}/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/libs/bible-parser.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/libs/jackson-core-2.19.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/libs/jackson-annotations-2.19.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/libs/jackson-databind-2.19.2.jar"/>
        </jar>
    </target>
</project>
